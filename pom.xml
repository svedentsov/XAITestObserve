<?xml version="1.0" encoding="UTF-8"?>
<!-- Основной файл конфигурации проекта Maven (Project Object Model). Определяет структуру проекта, зависимости, плагины и другие параметры сборки. -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- Родительский POM. Наслдует множество настроек и управление версиями зависимостей от Spring Boot, что упрощает конфигурацию. -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.1</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <!-- Координаты проекта -->
    <groupId>com.svedentsov</groupId>
    <artifactId>xaiobserverapp</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <!-- Мета-информация о проекте -->
    <name>XaiObserverApp</name>
    <description>XAI Observer Application for Test Results Analysis</description>
    <!-- Свойства проекта. Используются для централизованного управления версиями зависимостей и другими параметрами. -->
    <properties>
        <java.version>21</java.version>
        <springdoc.version>2.5.0</springdoc.version> <!-- Версия для Swagger/OpenAPI -->
        <okhttp.version>4.12.0</okhttp.version>
        <maven-surefire-plugin.version>3.2.5</maven-surefire-plugin.version>
        <org.mapstruct.version>1.5.5.Final</org.mapstruct.version>
        <lombok.version>1.18.30</lombok.version>
        <lombok-mapstruct-binding.version>0.2.0</lombok-mapstruct-binding.version>
        <jakarta-annotation.version>2.1.1</jakarta-annotation.version>
    </properties>
    <!-- Основной блок, определяющий зависимости проекта -->
    <dependencies>
        <!-- === STARTERS - Основные зависимости Spring Boot === -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-thymeleaf</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-cache</artifactId>
        </dependency>
        <!-- === SECURITY - Защита приложения === -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
        </dependency>
        <dependency>
            <groupId>org.thymeleaf.extras</groupId>
            <artifactId>thymeleaf-extras-springsecurity6</artifactId>
        </dependency>
        <!-- === WEBSOCKETS for Real-time Updates === -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-websocket</artifactId>
        </dependency>
        <!-- === API DOCUMENTATION - Документация Swagger/OpenAPI === -->
        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
            <version>${springdoc.version}</version>
        </dependency>
        <!-- === MAPPING & LOMBOK - Маппинг объектов и утилиты === -->
        <dependency>
            <groupId>org.mapstruct</groupId>
            <artifactId>mapstruct</artifactId>
            <version>${org.mapstruct.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mapstruct</groupId>
            <artifactId>mapstruct-processor</artifactId>
            <version>${org.mapstruct.version}</version>
            <scope>provided</scope> <!-- Процессор нужен только на этапе компиляции -->
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok-mapstruct-binding</artifactId>
            <version>${lombok-mapstruct-binding.version}</version>
            <scope>provided</scope>
        </dependency>
        <!-- === DATABASE & SERIALIZATION === -->
        <dependency><!-- PostgreSQL - основная база данных для prod и dev -->
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency><!-- H2 - для локальной разработки и тестов. Управляется профилями ниже. -->
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>test</scope> <!-- По умолчанию H2 нужна только для тестов -->
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-hibernate6</artifactId>
        </dependency>
        <dependency><!-- === JAKARTA EE - Дополнительные API === -->
            <groupId>jakarta.annotation</groupId>
            <artifactId>jakarta.annotation-api</artifactId>
            <version>${jakarta-annotation.version}</version>
        </dependency>
    </dependencies>
    <build><!-- Конфигурация процесса сборки проекта -->
        <plugins>
            <plugin><!-- Плагин для сборки исполняемого JAR-файла Spring Boot -->
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin><!-- Плагин для компиляции Java-кода -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version> <!-- Используем актуальную версию -->
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <annotationProcessorPaths><!-- Настройка обработчиков аннотаций. Крайне важна для совместной работы Lombok и MapStruct. -->
                        <path><!-- Обработчик для MapStruct -->
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${org.mapstruct.version}</version>
                        </path>
                        <path><!-- Обработчик для Lombok -->
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                        <path><!-- Связка Lombok и MapStruct -->
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok-mapstruct-binding</artifactId>
                            <version>${lombok-mapstruct-binding.version}</version>
                        </path>
                    </annotationProcessorPaths>
                    <compilerArgs><!-- Аргумент компилятора, который указывает MapStruct генерировать мапперы как Spring-компоненты (@Component). -->
                        <arg>-Amapstruct.defaultComponentModel=spring</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles><!-- Профили сборки для управления зависимостями в разных окружениях -->
        <profile><!-- Профиль для локальной разработки (активен по умолчанию) -->
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency><!-- Для профиля 'dev' добавляем H2 в область видимости runtime, чтобы можно было запускать приложение с H2 из IDE. -->
                    <groupId>com.h2database</groupId>
                    <artifactId>h2</artifactId>
                    <scope>runtime</scope>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
